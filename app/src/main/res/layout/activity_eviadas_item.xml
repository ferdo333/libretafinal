<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EviadasItemActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingLeft="8pt"
      android:paddingRight="8pt">

    <TextView
        android:id="@+id/activity_enviadas_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asunto" />

      <TextView
          android:id="@+id/activity_enviadas_item_tv_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Descripcion" />


      <Button
          android:id="@+id/activity_enviada_item_btn_update"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Actualizar " />
      <Button
          android:id="@+id/activity_enviada_item_btn_delete"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Eliminar "/>



  </LinearLayout>
</ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>